#include <iostream>

int main() {
    double A, B, C;
    std::cout << "Введите значения переменных A, B, C: ";
    std::cin >> A >> B >> C;

    if ((A < B && B < C) || (A > B && B > C)) {
        A *= 2;
        B *= 2;
        C *= 2;
    } else {
        A = -A;
        B = -B;
        C = -C;
    
    }
    std::cout << "Новые значения: A = " << A << ", B = " << B << ", C = " << C << std::endl;

    return 0;
}
// Таибов Баград НПИбд-03-23
// Даны три переменные вещественного типа: A, B, C. Если их значения упорядочены
// по возрастанию, то удвоить их; в противном случае заменить значение каждой переменной
// на противоположное.
