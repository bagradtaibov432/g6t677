#include <iostream> 
 
using namespace std;
 
int main()
{
    int a,b,c,cnt_n=0, cnt_p=0,cnt_nul=0;
    cout<<"Enter a -> ";
    cin>>a;
    cout<<"Enter b -> ";
    cin>>b;
    cout<<"Enter c -> ";
    cin>>c;
    (a > 0) ? cnt_p++ : ((a!=0) ? cnt_n++ : cnt_nul++);
    (b > 0) ? cnt_p++ : ((b!=0) ? cnt_n++ : cnt_nul++);
    (c > 0) ? cnt_p++ : ((c!=0) ? cnt_n++ : cnt_nul++);
    cout<<endl<<"Positive -> "<<cnt_p<<endl;
    cout<<"Negative -> "<<cnt_n<<endl;
    cout<<"Null     -> "<<cnt_nul<<endl;
    system("pause");
        return 0;
        // Таибов Баград Имамудинович. НПИбд-03-23
        // Даны три целых числа. Найти количество положительных и отрицательных чисел в исходном наборе
}
